<UserControl x:Class="UserConrols.FileInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserConrols"
             mc:Ignorable="d" x:Name="Root">
    <DockPanel>
        <TextBox x:Name="TheTextBox" Text="{Binding ElementName=Root, Path=FileName}" Width="100" Margin="5"/>
        <Button DockPanel.Dock="Right" x:Name="TheButton" Margin="5" Click="TheButton_OnClick">Browse..</Button>
    </DockPanel>
</UserControl>
